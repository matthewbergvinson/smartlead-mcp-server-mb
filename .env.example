# SmartLead MCP Server Configuration
# Copy this file to .env and fill in your values

# SmartLead API Configuration (Required)
SMARTLEAD_API_KEY=your-smartlead-api-key-here

# Optional Configuration
SMARTLEAD_API_URL=https://server.smartlead.ai/api/v1
SMARTLEAD_TIMEOUT=30000

# Retry Configuration (Optional)
SMARTLEAD_RETRY_MAX_ATTEMPTS=3
SMARTLEAD_RETRY_INITIAL_DELAY=1000
SMARTLEAD_RETRY_MAX_DELAY=10000
SMARTLEAD_RETRY_BACKOFF_FACTOR=2

# Debug Configuration (Optional)
DEBUG=false
LOG_LEVEL=info

# Rate Limiting (Optional)
RATE_LIMIT_REQUESTS_PER_MINUTE=300
RATE_LIMIT_BURST_SIZE=10
